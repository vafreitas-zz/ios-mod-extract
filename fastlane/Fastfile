# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Build app and run unit tests"
  lane :test_module do
     setup_ci if ENV['CI']
	  scan(
      workspace: "Example/TQIExtract.xcworkspace",
      scheme: "TQIExtract-Example",
      configuration: "Debug",
      device: "iPhone 13 Pro Max",
      clean: true,
      xcargs: "CODE_SIGN_IDENTITY="" CODE_SIGNING_REQUIRED=NO"
    )
  end
end
